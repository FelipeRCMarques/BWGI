
version: '3'
services:
  airflow-webserver:
    image: apache/airflow:2.10.5-python3.9
    ports:
      - "8080:8080"
    environment:
      - LOAD_EX=n
      - AIRFLOW__CORE__EXECUTOR=SequentialExecutor
      - AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:////opt/airflow/airflow.db
    volumes:
      - ./dags:/opt/airflow/dags
    command: webserver
